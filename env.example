# Environment Configuration
NODE_ENV=development

# Application URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
API_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/olx-classifieds?retryWrites=true&w=majority

REDIS_URL=redis://:password@your-redis-host:6379

ELASTICSEARCH_URL=http://localhost:9200

# ================================
# JWT Configuration - Production
# ================================

# Access token secret (short-lived token for API requests)
JWT_SECRET=your_jwt_secret

# Refresh token secret (long-lived token to refresh access token)
JWT_REFRESH_SECRET=your_refresh_token_secret

# Access token expiry (short-lived for security)
JWT_EXPIRE=12h

# Refresh token expiry (longer-lived, but still limited)
JWT_REFRESH_EXPIRE=14d


# Email Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-app-password
EMAIL_FROM=noreply@example.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+10000000000

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Payment Gateway Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Google Services
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Firebase Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"


# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting - Production Optimized for 10k daily users
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# File Upload Configuration - Production Optimized
MAX_FILE_SIZE=52428800
MAX_FILES_PER_LISTING=20
UPLOAD_TIMEOUT=300000
UPLOAD_CONCURRENT_LIMIT=10

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me_in_prod


# Monitoring & Analytics
SENTRY_DSN=https://e2a...yourDSNlink...sentry.io/4510108086698064
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Production Performance Optimizations
UV_THREADPOOL_SIZE=16
NODE_OPTIONS=--max-old-space-size=2048
CLUSTER_MODE=false
WORKER_PROCESSES=auto

# Database Connection Pool Settings
DB_MAX_POOL_SIZE=50
DB_MIN_POOL_SIZE=10
DB_MAX_IDLE_TIME_MS=30000
DB_SERVER_SELECTION_TIMEOUT_MS=10000
DB_SOCKET_TIMEOUT_MS=60000

# Redis Connection Settings
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_RETRY_DELAY_ON_FAILOVER=100
REDIS_MAX_RETRIES_PER_REQUEST=3

# Cache Settings
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER_SESSION=3600
CACHE_TTL_LISTINGS=1800
CACHE_TTL_SEARCH_RESULTS=600

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=60000
WS_MAX_CONNECTIONS=10000

# Background Job Settings
JOB_CONCURRENCY=10
JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=5000


